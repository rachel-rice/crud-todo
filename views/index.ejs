<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- ICONS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <!-- STYLESHEET LINK -->
    <link rel="stylesheet" href="/style.css">

</head>
<body>
    <section class="todo-container">
        <h2>To Do List</h2>
        <form action="/" method="post" class="todo-header">
            <input type="text" name="title" value="title">
            <textarea cols="45" rows="6" name="content">content</textarea>
            <button type="submit"><span class="fas fa-plus">Add Text</span></button>
        </form>
        <ul class="todo-list">
            <% todoTasks.forEach(task => {%>
                <li class="todo-list-item">
                    <div class="todo-list-item-title">
                        <%= task.title %>
                    </div>
                    <div class="todo-list-item-content">
                        <%= task.content %>
                    </div>
                    <a href="/edit/<%=task._id %>" class="edit"><span class="fas fa-edit"></span></a>
                    <a href="/remove/<%=task._id %>" class="remove"><span class="fas fa-times"></span></a>
                </li>
            <% }) %>
        </ul>
    </section>


</body>
</html>